<% g = @gossips.find(params[:id]) %>

<br><br><br>
<center>
<div class="card" style="width: 18rem;">
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><U><h2>Gossip n° <%=g.id%> </h2></U></li>
    <li class="list-group-item"><h5>DATE DE CRÉATION : </h5><%=  g.created_at   %></li>
    <li class="list-group-item"><h5>AUTEUR :</h5><%=  g.user.first_name   %> <%=  g.user.last_name   %></li>
    <li class="list-group-item"><h5>TITRE : </h5><%=  g.title   %></li>
    <li class="list-group-item"><h5>CONTENU : </h5> <%=  g.content   %></li>
    <li class="list-group-item"><h5>CITY : </h5> <%=  g.user.city.name   %></li>
  </ul>
     <a href="<%=user_path(g.user.id)%>" class="btn btn-primary">Voir auteur</a><br>
     <a href="<%=city_path(g.user.city.id)%>" class="btn btn-primary">Voir ville de l'auteur</a><br>

                                     <% if current_user == g.user %>

     <a href="<%=edit_gossip_path(g.id)%>" class="btn btn-primary">Editer le potin</a><br>

                                               <% else %> <% end %>
                                   

                                     <% if current_user == g.user %>


    <%= link_to "Supprimer", gossip_path(params[:id]), :class => "btn btn-danger", :method => "delete" %><br>
                                        
                                                   <% else %>
      <%= link_to "Supprimer", static_pages_home_path, :class => "btn btn-primary" %><br>
<% end %>

     <a href="<%=gossip_comment_path(g.user_id)%>" class="btn btn-primary">Commenter le potin</a>
</div>
</center>